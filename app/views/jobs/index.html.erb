<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<table class="table table-dark">
  <thead>
    <tr>
      <th>Service</th>
      <th>Charge</th>
      <th>Expenses</th>
      <th>Mileage</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.service.name %></td>
        <td><%= job.charge %></td>
        <td><%= job.expenses %></td>
        <td><%= job.mileage %></td>
        <td><%= job.notes %></td>
        <td><%= link_to 'Show', job, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_job_path(job), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.clients.count > 0 %>
  <%= link_to 'New Job', new_job_path, class: "btn btn-primary" %>
<% end %>
